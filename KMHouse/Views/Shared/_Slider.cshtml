@{ 
    var slide = (List<Models.EF.Slide>)ViewBag.Slide;
}
<div class="col-lg-9">
    <div class="slider-area pt-sm-30 pt-xs-30">
        <div class="slider-active owl-carousel">
            <!-- Begin Single Slide Area -->
            @foreach (var item in slide.OrderBy(x => x.DisplayOrder))
            {
                <div class="single-slide align-center-left animation-style-02 bg-image-slider" style="background-image: url(@item.Image)">
                    <div class="slider-progress"></div>
                    <div class="slider-content">
                        <h5>@item.SeoTitle</h5>
                        <h2>@item.Title</h2>
                        <h3>@item.Description</h3>
                        <div class="default-btn slide-btn">
                            <a class="links" href="#">Mua ngay</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
